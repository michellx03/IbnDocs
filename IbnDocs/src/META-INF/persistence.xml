<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd
	  ">

	<persistence-unit name="IbnDocsPU"
		transaction-type="RESOURCE_LOCAL">

		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>br.com.ibndocs.entity.Usuario</class>
		<class>br.com.ibndocs.entity.UsuarioRegra</class>
		<class>br.com.ibndocs.entity.Documentos</class>
		<class>br.com.ibndocs.entity.Regra</class>
		<class>br.com.ibndocs.entity.Empresa</class>
		<class>br.com.ibndocs.entity.Setor</class>
		<class>br.com.ibndocs.entity.Responsavel</class>
		
		<properties>
		<property name="hibernate.hbm2dll.auto" value="create"/>
		</properties>
	</persistence-unit>



</persistence>
